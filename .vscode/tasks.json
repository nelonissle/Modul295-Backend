{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Tests and Build",
            "type": "shell",
            "command": "cmd",
            "args": ["/c", "cd /d ${workspaceFolder}\\Modul295PraxisArbeit && dotnet test && dotnet clean && dotnet build"],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run Unit Tests Every 30 Minutes",
            "type": "process",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", "${workspaceFolder}\\Modul295PraxisArbeit\\run_tests.ps1"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "isBackground": true,
            "runOptions": { "runOn": "folderOpen" }  // âœ… Automatically starts when opening VS Code
        }
    ]
}
